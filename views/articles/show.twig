{% extends '../layout.twig' %}

{% set title = 'Article Detail' %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title">Article Detail</h3>
				</div><!-- /.box-header -->
				<div class="box-body">
					<div class="form-group">
						<label for="description">Description:</label>
						<textarea readonly="" style="resize: none;" required value="{{article.description}}" name="description" id="description" rows="5" class="form-control" placeholder="Description">{{article.description}}</textarea>
					</div>
				</div>
				<div class="box-footer">
					<a href="/" class="btn btn-default">Article List</a>
					&nbsp;
					<form class="delete-form displayInline" method="POST" action="/delete/{{article._id}}" onsubmit="return confirm('Are you Sure to Delete');">
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}