{% extends 'layout.twig' %}

{% set title = 'Register' %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			<!-- general form elements -->
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title">Register</h3>
				</div><!-- /.box-header -->
				<form method="post" id="edit" action="/register">
					<div class="box-body">
						<div class="form-group">
							<label for="firstname">First Name</label>
							<input required value="{{data.firstname}}" minlength="3" maxlength="25" type="text" name="firstname" class="form-control" placeholder="First Name"/>
						</div>
						<div class="form-group">
							<label for="lastname">Last Name</label>
							<input required value="{{data.lastname}}" minlength="3" maxlength="25" type="text" name="lastname" class="form-control" placeholder="Last Name"/>
						</div>
						<div class="form-group">
							<label for="email">Email</label>
							<input required value="{{data.email}}" minlength="3" maxlength="25" type="email" name="email" class="form-control" placeholder="Email"/>
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<input required value="{{data.password}}" minlength="3" maxlength="25" type="password" name="password" class="form-control" placeholder="Password"/>
						</div>
					</div>
					<div class="box-footer">
						<button type="submit" class="btn btn-primary">Register</button>
						&nbsp;
						<a href="/" class="btn btn-default">Cancel</a>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}